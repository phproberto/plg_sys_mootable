<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_SYS_MOOTABLE</name>
	<author>Roberto Segura</author>
	<creationDate>October 2012</creationDate>
	<copyright>Copyright (C) 2012 Roberto Segura. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>roberto@phproberto.com</authorEmail>
	<authorUrl>http://digitaldisseny.com/en/extensions/showtags-content-tags-joomla-plugin</authorUrl>
	<version>1.0.6</version>
	<description>PLG_SYS_MOOTABLE_XML_DESC</description>
	<files>
		<folder>css</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename plugin="mootable">mootable.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<!-- de-DE -->
		<language tag="pt-BR">language/de-DE/de-DE.plg_system_mootable.ini</language>
		<language tag="pt-BR">language/de-DE/de-DE.plg_system_mootable.sys.ini</language>
		<!-- en-GB -->
		<language tag="en-GB">language/en-GB/en-GB.plg_system_mootable.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_mootable.sys.ini</language>
		<!-- es-ES -->
		<language tag="es-ES">language/es-ES/es-ES.plg_system_mootable.ini</language>
		<language tag="es-ES">language/es-ES/es-ES.plg_system_mootable.sys.ini</language>
		<!-- nl-NL -->
		<language tag="nl-NL">language/nl-NL/nl-NL.plg_system_mootable.ini</language>
		<language tag="nl-NL">language/nl-NL/nl-NL.plg_system_mootable.sys.ini</language>
		<!-- pl-PL -->
		<language tag="pl-PL">language/pl-PL/pl-PL.plg_system_mootable.ini</language>
		<language tag="pl-PL">language/pl-PL/pl-PL.plg_system_mootable.sys.ini</language>
		<!-- pt-BR -->
		<language tag="pt-BR">language/pt-BR/pt-BR.plg_system_mootable.ini</language>
		<language tag="pt-BR">language/pt-BR/pt-BR.plg_system_mootable.sys.ini</language>
	</languages>
	<config>
	<fields name="params">
		<fieldset name="basic">
				<field
					name="defaultMode"
					type="list"
					default="0"
					label="PLG_SYS_MOOTABLE_FIELD_DEFAULT_MODE_LABEL"
					description="PLG_SYS_MOOTABLE_FIELD_DEFAULT_MODE_DESC">
						<option value="0">
							PLG_SYS_MOOTABLE_FIELD_DEFAULT_DISABLED
						</option>
						<option value="1">
							PLG_SYS_MOOTABLE_FIELD_DEFAULT_ENABLED
						</option>
				</field>
				<field
					name="manualDisable"
					type="textarea"
					default=""
					label="PLG_SYS_MOOTABLE_FIELD_MANUAL_DISABLE_LABEL"
					description="PLG_SYS_MOOTABLE_FIELD_MANUAL_DISABLE_DESC"
					rows="5"
					cols="30"
				/>
				<field name="contentEdition" type="radio"
					description="PLG_SYS_MOOTABLE_FIELD_CONTENT_EDITION_LABEL"
					label="PLG_SYS_MOOTABLE_FIELD_CONTENT_EDITION_DESC"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
		</fieldset>
	</fields>
	</config>
</extension>